<%= simple_form_for quote, html: { class: "quote form" } do |f| %>
  <% if quote.errors.any? %>
    <div class="help is-danger">
        <%= quote.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>
  
  <%= f.input :name, input_html: { autofocus: true } %>
  <%= f.submit class: "button is-primary mt-4" %>
<% end %>